        pro.setProperty("qwe","72");
        pro.setProperty("asd","45");
        pro.setProperty("zxc","85");
       Set<String>a=pro.stringPropertyNames();
       for(String key:a)
       {
           System.out.println(key+","+pro.getProperty(key));
       }
        System.out.println(pro);
    }
